<div id="portoflioRow" class="row">
	<% obj.each do |article| %>
		<div class="col-md-4 col-md-offset-2">
			<div class="portfolio-item-container">
					<img src="<%= article.img_url %>" class="portfolio-img" alt="portfolio image">
					<div class="on-center-img">
						<a href="<%= article.item_url %>" class="portfolio-item-link">
							<div class="portfolio-item-title"><%= article.title %></div> 
						</a>
							<%= article.description %>	
						
					</div>
			</div>
		</div>
	<% end %>
</div>